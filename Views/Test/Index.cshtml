@{
	ViewBag.Title = "Index";
}

@model IEnumerable<Klienci>

<h2 class="text-center">Klienci</h2>
<div class="d-flex flex-row py-3 gap-1">
	<a class="btn btn-primary" href="@Url.Action("Create", "Test")">
		Dodaj klienta
	</a>
	<a class="btn btn-secondary" href="@Url.Action("Import", "Test")">
		Importuj klientów z CSV
	</a>
	<div class="bg-secondary text-white rounded d-inline-block w-auto">
		<div class="d-flex flex-row w-auto align-items-center">
			<p class="m-0 px-2">Eksportuj klientów</p>
			<a class="btn btn-primary" href="@Url.Action("Export", "Test", new { type = 1 })">CSV</a>
			<a class="btn btn-primary" href="@Url.Action("Export", "Test", new { type = 2 })">XLSX</a>
		</div>
	</div>
</div>

<table class="table table-striped">
	<tr>
		<th>Id</th>
		<th>Name</th>
		<th>Surname</th>
		<th>PESEL</th>
		<th>BirthYear</th>
		<th>Płeć</th>
		<th></th>
		<th></th>
	</tr>
	@foreach (var klient in Model) {
		<tr>
			<td>@klient.Id</td> 
			<td>@klient.Name</td>
			<td>@klient.Surname</td>
			<td>@klient.PESEL</td>
			<td>@klient.BirthYear</td>
			<td>@klient.Płeć</td>
			<td>
				<a class="btn btn-info px-4 py-1 text-decoration-none rounded" href="@Url.Action("Edit", "Test", new { id = klient.Id })">
					Edycja
				</a>
			</td>
			<td>
				<a class="btn btn-danger px-4 py-1 text-decoration-none rounded" href="@Url.Action("Delete", "Test", new { id = klient.Id })">
					Usuń
				</a>
			</td>
		</tr>
	}
</table>